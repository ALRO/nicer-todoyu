{
    "manifest_version": 2,

    "name": "Nicer Todoyu",
    "description": "Makes Todoyu nicer",
    "version": "0.3.0",

    "permissions": [
        "storage"
    ],

    "web_accessible_resources": [
        "css/*",
        "svg/*"
    ],

    "content_scripts": [{
        "js": [
            "lib/jquery-2.1.1.min.js",
            "lib/chosen.jquery.min.js",
            "js/todoyu.js"
        ],
        "css": [
            "css/pre-load.css",
            "lib/chosen.min.css"
        ],
        "matches": [
            "https://*.todoyu.net/*"
        ],
        "run_at": "document_end"
    }]
}
